<%=
CSV.generate do |csv|
    csv << ["id", "district_attorney_county", "district_attorney_file_number", "incident_url", "person_name", "person_ethnicity", "person_gender", "person_age", "district_attorney_date_of_letter", "type_of_incident", "date_of_incident", "person_killed", "person_armed", "armed_with_firearm", "armed_with_weapon", "used_vehicle_as_weapon", "person_ignored_officer_commands", "person_hid_hands_from_officer", "person_reached_for_waistband", "person_fled_by_foot_or_vehicle", "person_grabbed_for_officers_weapon_holster", "person_signs_of_mental_illness", "person_signs_of_impairment", "officer_self_defense", "officer_defense_of_civillians", "officer_defense_of_officers"]
    @these_people.each do |item|

        # fix the incident date
        date_of_incident_pacific = item.incident.date_of_incident.in_time_zone("Pacific Time (US & Canada)")
        offset = date_of_incident_pacific.utc_offset()
        date_of_incident_correct = date_of_incident_pacific += offset.abs
        date_of_incident_string = date_of_incident_correct.strftime "%Y-%m-%d %H:%M %Z"
        puts date_of_incident_string

        # fix the date of da letter
        da_date_of_letter_pacific = item.incident.district_attorney_date_of_letter.in_time_zone("Pacific Time (US & Canada)")
        offset = da_date_of_letter_pacific.utc_offset()
        da_date_of_letter_correct = da_date_of_letter_pacific += offset.abs
        da_date_of_letter_string = da_date_of_letter_correct.strftime "%Y-%m-%d"
        puts da_date_of_letter_string

        csv << [item.id, item.incident.district_attorney_county, item.district_attorney_file_number, item.incident_url, item.person_name, item.person_ethnicity, item.person_gender, item.person_age, da_date_of_letter_string, item.incident.type_of_incident, date_of_incident_string, item.person_killed, item.person_armed, item.armed_with_firearm, item.armed_with_weapon, item.used_vehicle_as_weapon, item.person_ignored_officer_commands, item.person_hid_hands_from_officer, item.person_reached_for_waistband, item.person_fled_by_foot_or_vehicle, item.person_grabbed_for_officers_weapon_holster, item.person_signs_of_mental_illness, item.person_signs_of_impairment, item.incident.officer_self_defense, item.incident.officer_defense_of_civillians, item.incident.officer_defense_of_officers]
    end
end .html_safe
%>
