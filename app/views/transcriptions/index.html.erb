<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <ol class="breadcrumb">
            <li><%= link_to 'Home', controller: :home, action: :index %></li>
            <li>Verify Transcriptions</li>
        </ol>
        <h1>Transcriptions#index</h1>
        <hr></hr>
        <div id="table-container">
            <table class="kpcc-table">
                <tr>
                    <th>Verified</th>
                    <th>Verified By</th>
                    <th>DA File Number</th>
                    <th>Transcribed By</th>
                    <th>Transcribed Date</th>
                    <th>Delete</th>
                    <th>Verify/Edit</th>
                </tr>
                <% @transcriptions.each do |this| %>
                    <tr>
                        <% if @incidents.find_by(id: this.incident_id).verified == true %>
                            <td style="color: green">&#10004;</td>
                        <% else %>
                            <td style="color: red">&mdash;</td>
                        <% end %>
                        <td><%= @incidents.find_by(id: this.incident_id).email %></td>
                        <td><%= this.district_attorney_file_number %></td>
                        <td><%= this.email %></td>
                        <td><%= this.created_at.strftime("%m/%d/%Y") %></td>
                        <td><%= link_to "Delete", transcription_path(this.id), class: "btn btn-danger", method: :delete, data: {confirm: "are you sure?"} %></td>
                        <% if @incidents.find_by(id: this.incident_id).verified == true %>
                            <td><%= link_to "Edit", edit_transcription_path(this.id), class: "btn btn-warning" %></li></td>
                        <% else %>
                            <td><%= link_to "Verify", edit_transcription_path(this.id), class: "btn btn-success" %></li></td>
                        <% end %>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>
