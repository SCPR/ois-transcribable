<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <ol class="breadcrumb">
            <li><%= link_to 'Home', controller: :home, action: :index %></li>
            <li>View Transcriptions</li>
        </ol>
        <h1>Transcriptions#index</h1>
        <li><%= link_to "Download All Transcriptions", transcriptions_path(format: :csv), class: "btn btn-info" %></li>
        <hr></hr>
        <ul>
            <% @record_count.each do |this| %>
                <% if this[1] > 1 %>
                    <li><h6><%= this[0] %> (<%= this[1] %>)</h6></li>
                    <% @transcriptions.where(district_attorney_file_number: this[0]).find_each do |obj| %>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <ul>
                                <li>Filed by <%= obj.email %> at <%= obj.created_at.strftime("%m/%d/%Y") %></li>
                                <ul class="list-inline">
                                    <!--
                                    <li><%#= link_to "View", transcription_path(obj), class: "btn btn-info" %></li>
                                    -->
                                    <li><%= link_to "Edit", edit_transcription_path(obj), class: "btn btn-success" %></li>
                                </ul>
                            </ul>
                            <hr></hr>
                        </div>
                    <% end %>
                <% else %>
                    <% @this_record = @transcriptions.find_by(district_attorney_file_number: this[0]) %>
                        <li><h6><%= this[0] %> (<%= this[1] %>)</h6></li>
                        <ul>
                            <li>Filed by <%= @this_record.email %> at <%= @this_record.created_at.strftime("%m/%d/%Y") %></li>
                            <ul class="list-inline">
                                <!--
                                <li><%#= link_to "View", transcription_path(@this_record), class: "btn btn-info" %></li>
                                -->
                                <li><%= link_to "Edit", edit_transcription_path(@this_record), class: "btn btn-success" %></li>
                                <li><%= link_to "Delete", transcription_path(@this_record), class: "btn btn-danger", method: :delete, data: {confirm: "are you sure?"} %></li>
                            </ul>
                        </ul>
                        <hr></hr>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>
