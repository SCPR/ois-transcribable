<%= simple_form_for @people, url: people_path do |p| %>

    <%= submit_tag "Submit The Edited Information", :class => "btn btn-success btn-lg btn-block", :id => "peoplesubmit"  %>

    <div class="overflow form-fields">
        <% if @people.errors.any? %>
            <div id="error_explanation">
                <h6><%= pluralize(@people.errors.count, "error") %> prohibited this person from being saved:</h6>
                <ul>
                    <% @people.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <% if params[:incident_url] %>
            <div class="do_something">
                <div class="field" id="incident_url">
                    <%= p.input :incident_url, class: "form-control", :input_html => { :value => params[:incident_url] }, label: "Incident URL", hint: "* Link to the District Attorney summary letter on DocumentCloud." %>
                </div>
            </div>
        <% else %>
            <div class="do_something">
                <div class="field" id="incident_url">
                    <%= p.input :incident_url, class: "form-control", label: "Incident URL", hint: "* Link to the District Attorney summary letter on DocumentCloud." %>
                </div>
            </div>
        <% end %>

        <% if params[:district_attorney_file_number] %>
            <div class="do_something">
                <div class="field" id="district_attorney_file_number">
                    <%= p.input :district_attorney_file_number, class: "form-control", :input_html => { :value => params[:district_attorney_file_number] }, label: "District Attorney File Number", hint: "* File number used by the district attorney's office. In the case of the Los Angeles District Attorney's Justice System Integrity Division the first two numbers indicate the year in which the shooting took place." %>
                </div>
            </div>
        <% else %>
            <div class="do_something">
                <div class="field" id="district_attorney_file_number">
                    <%= p.input :district_attorney_file_number, class: "form-control", label: "District Attorney File Number", hint: "* File number used by the district attorney's office. In the case of the Los Angeles District Attorney's Justice System Integrity Division the first two numbers indicate the year in which the shooting took place." %>
                </div>
            </div>
        <% end %>

        <%= render "people/base_form", p: p %>

        <hr></hr>

        <!-- begin initial data -->
        <h5>Coroner's Office Information</h5>

        <div class="do_something">
            <div class="field" id="person_place_of_death">
                <%= p.input :person_place_of_death, class: "form-control", label: "Person Place Of Death", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="person_manner">
                <%= p.input :person_manner, class: "form-control", label: "Manner of Death", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="person_cause_a">
                <%= p.input :person_cause_a, class: "form-control", label: "Cause A", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="person_cause_b">
                <%= p.input :person_cause_b, class: "form-control", label: "Cause B", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="pperson_cause_c">
                <%= p.input :person_cause_c, class: "form-control", label: "Cause C", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="person_cause_d">
                <%= p.input :person_cause_d, class: "form-control", label: "Cause D", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="person_other_significant_causes">
                <%= p.input :person_other_significant_causes, class: "form-control", label: "Other Significant Cause", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="person_investigator">
                <%= p.input :person_investigator, class: "form-control", label: "Investigator", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="person_dme">
                <%= p.input :person_dme, class: "form-control", label: "DME", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="person_toxicology_status">
                <%= p.input :person_toxicology_status, class: "form-control", label: "Toxicology Status", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="person_case_status">
                <%= p.input :person_case_status, class: "form-control", label: "Case Status", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="person_body_status">
                <%= p.input :person_body_status, class: "form-control", label: "Body Status", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="person_age">
