            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="do_something">
                    <label class="checkbox-inline">
                        <%= p.input :in_custody, class: "form-control", label: "In Custody" %>
                    </label>
                </div>
            </div>
        </div>

        <hr></hr>

        <%= hidden_field_tag "people_id", @people.id %>

    </div>
<% end %>
