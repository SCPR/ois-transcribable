                <%= p.input :coroner_case_number, class: "form-control", label: "Coroner Case Number", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
            <div class="field" id="coroner_police_agency">
                <%= p.input :coroner_police_agency, class: "form-control", label: "Coroner Police Agency", hint: "*" %>
            </div>
        </div>

        <!--
        <div class="do_something">
            <%#= p.input :person_date_of_death, class: "form-control", as: :date, start_year: Date.today.year - 15, end_year: Date.today.year, order: [:month, :day,  :year], label: "person_date_of_death" %>
        </div>

        <div class="do_something">
            <%#= p.input :person_date_of_birth, class: "form-control", as: :date, start_year: Date.today.year - 90, end_year: Date.today.year, order: [:month, :day,  :year], label: "person_date_of_birth" %>
        </div>
        -->

        <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="do_something">
                    <label class="checkbox-inline">
                        <%= p.input :law_enforcement_related, class: "form-control", label: "Law Enforcement Related" %>
                    </label>
                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="do_something">
                    <label class="checkbox-inline">
                        <%= p.input :officer_involved, class: "form-control", label: "Officer Involved" %>
