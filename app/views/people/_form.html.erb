            </div>
        </div>

        <div class="do_something">
            <div class="field" id="in_custody_record_key_number">
                <%= p.input :in_custody_record_key_number, class: "form-control", label: "In Custody Death Record Number", hint: "*" %>
            </div>
        </div>

        <div class="do_something">
