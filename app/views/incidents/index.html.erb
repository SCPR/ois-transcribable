<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <ol class="breadcrumb">
            <li><%= link_to 'Home', controller: :home, action: :index %></li>
            <li>Incident Statistics</li>
        </ol>
        <h1>Incident Statistics</h1>
        <hr></hr>

        <div id="table-container">
            <table class="kpcc-table">
            <thead>
                <tr>
                    <th style="text-align: center; width: 33%;">Incidents</th>
                    <th style="text-align: center; width: 33%;">Verified Incidents</th>
                    <th style="text-align: center; width: 33%;">On-duty use-of-force incidents</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="text-align: center; width: 33%;"><%= @incidents.count %></td>
                    <td style="text-align: center; width: 33%;"><%= @verified_incidents.count %></td>
                    <td style="text-align: center; width: 33%;"><%= @on_duty_incidents.count %></td>
                </tr>
            </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <h4 class="text-center">Based on <%= @on_duty_incidents.count %> relevant, on-duty use-of-force incidents</h4>
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <h6>Overall</h6>
        <ul>
            <li>fatal_incidents</li>
            <ul>
                <% @fatal.each do |t, a| %>
