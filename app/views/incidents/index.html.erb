<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <ol class="breadcrumb">
            <li><%= link_to 'Home', controller: :home, action: :index %></li>
            <li>Edit Incident</li>
        </ol>
        <h1>Incidents#index</h1>
        <p><strong>Looking for incidents statistics?</strong> <%= link_to "Try Here", incidents_statistics_path %> to view details about the <%= @incidents.size %> <%= link_to "incidents we've transcribed", incidents_statistics_path %>.</p>
        <hr></hr>
        <div id="table-container">
            <table class="kpcc-table">
                <tr>
                    <th>Verified</th>
                    <th>Verified By</th>
                    <th>Verified Date</th>
                    <th>DA File Number</th>
                    <!--<th>Delete</th>-->
                    <th>Edit</th>
                </tr>
                <% @incidents.each do |incident| %>
                    <% @this_record = @incidents.find_by(id: incident.id) %>
                        <tr>
                            <% if incident.verified == true %>
                                <td style="color: green">&#10004;</td>
                            <% else %>
                                <td style="color: red">&mdash;</td>
                            <% end %>
                            <td><%= incident.email %></td>
                            <td><%= incident.updated_at.strftime("%m/%d/%Y") %></td>
                            <td><%= incident.district_attorney_file_number %></td>
                            <!--<td><%#= link_to "Delete", incident_path(@this_record), class: "btn btn-danger", method: :delete, data: {confirm: "are you sure?"} %></td>-->
                            <td><%= link_to "Edit", edit_incident_path(@this_record), class: "btn btn-success" %></li></td>
                        </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>
