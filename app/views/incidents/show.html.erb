<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <ol class="breadcrumb">
            <li><%= link_to 'Home', controller: :home, action: :index %></li>
            <li><%= link_to "View Incidents", incidents_path() %></li>
            <% if @incident.district_attorney_file_number %>
                <li><%= @incident.district_attorney_file_number %></li>
            <% else %>
                <li><%= @incident.incident_url %></li>
            <% end %>
        </ol>
        <h1>Incidents#show</h1>
        <ul>
            <% if @incident.district_attorney_file_number %>
                <li><h6><%= link_to @incident.district_attorney_file_number, @incident.incident_url %></h6></li>
            <% else %>
                <li><h6><%= link_to @incident.incident_url, @incident.incident_url %></h6></li>
            <% end %>
            <ul>
                <% if @incident.user_email %>
                    <li><h6>Transcribed by <%= @incident.user_email %></h6></li>
                <% else %>
                    <li><h6>Not Yet Transcribed</h6></li>
                <% end %>
                <% if@incident.verified_by_email %>
                    <li><h6>Verified by <%= @incident.verified_by_email %></h6></li>
                <% else %>
                    <li><h6>Not Yet Verified</h6></li>
                <% end %>
            </ul>
            <ul class="list-inline">
                <li><%= link_to "Edit", edit_incident_path(@incident), class: "btn btn-success" %></li>
                <li><%= link_to "Delete", incident_path(@incident), class: "btn btn-danger", method: :delete, data: {confirm: "are you sure?"} %></li>
            </ul>
        </ul>
    </div>
</div>
